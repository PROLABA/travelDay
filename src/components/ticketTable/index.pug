.cart-blank
    .cart-blank__content
        form.cart-blank__form.mt-32-20
            .cart-blank__form-item
                ul.cart-blank__list
                    li.cart-blank__item
                        label.cart-blank__radio
                            input.cart-blank__radio-input(type='radio', name='date', checked, hidden)
                            .item
                                span.title Сегодня
                                span.text-gray 10 марта
                    li.cart-blank__item
                        label.cart-blank__radio
                            input.cart-blank__radio-input(type='radio', name='date', hidden)
                            .item
                                span.title Завтра
                                span.text-gray 11 марта
                    li.cart-blank__item
                        button.date-button
                            +useIcon('date')
                            span Выбрать дату
            //- для примера другой стейт показываю
            .cart-blank__form-item
                span.label Направление маршрута
                ul.cart-blank__list
                    li.cart-blank__item
                        label.cart-blank__radio
                            input.cart-blank__radio-input(type='radio', name='naprvalenie', hidden)
                            .item
                                span.title Туда и обратно
                    li.cart-blank__item
                        label.cart-blank__radio
