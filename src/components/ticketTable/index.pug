                            span Взрослый
                            span.text-gray.text-14 16+ (РФ и РБ)
                        .cart-blank__count
                            .card__price
                                span.card__current-price.body-xl-3 1 400 ₽
                            .cart-blank__count-value
                                button.cart-blank__count-button
                                    +useIcon('minus')
                                span.value 2
