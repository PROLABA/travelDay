extends ../../layout/index.pug
include ../../mixin/useIcon.pug

block content
    section.container.mt-page.cart-section
        .cart-blank
            a.arrow-back(href='#')
                +useIcon('arrow-circle')
                span Назад
            .cart-blank__content
                .cart-blank__title
                    h1.h1 Дата и участники
                form.cart-blank__form.mt-32-20
                    .cart-blank__form-item
                        ul.cart-blank__list
                            li.cart-blank__item
                                label.cart-blank__radio
                                    input.cart-blank__radio-input(type='radio', name='date', checked, hidden)
                                    .item
                                        span.title Сегодня
                                        span.text-gray 10 марта
                            li.cart-blank__item
                                label.cart-blank__radio
                                    input.cart-blank__radio-input(type='radio', name='date', hidden)
                                    .item
                                        span.title Завтра
                                        span.text-gray 11 марта
                            li.cart-blank__item
                                button.date-button
                                    +useIcon('date')
                                    span Выбрать дату
                    .cart-blank__form-item
                        span.label Время отправления
                        ul.cart-blank__list
                            each time in ['11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00', '18:00', '19:00', '20:00']
                                li.cart-blank__item
                                    label.cart-blank__radio
                                        input.cart-blank__radio-input(type='radio', name='time', hidden)
                                        .item
                                            span.title #{ time }
                    .cart-blank__form-item
                        span.label Место отправления
                        span Невский пр. 35, (станция метро «Невский проспект», угол Думской ул. и Невского пр.)
                    .cart-blank__form-item
                        span.label Время обратного отправления
                        ul.cart-blank__list
                            each time in ['11:00', '12:00', '13:00', '14:00', '15:00']
                                li.cart-blank__item
                                    label.cart-blank__radio
                                        input.cart-blank__radio-input(type='radio', name='time-2', hidden)
                                        .item
                                            span.title #{ time }
                    .cart-blank__form-item
                        span.label Время обратного отправления
                        span Невский пр. 35, (станция метро «Невский проспект», угол Думской ул. и Невского пр.)
                    .cart-blank__form-item
                        span.label Участники
                        ul.cart-blank__main-list
                            li.cart-blank__main-item
                                .c-flex.c-flex-column.gap-4
                                    span Взрослый
                                    span.text-gray.text-14 16+ (РФ и РБ)
                                .cart-blank__count
                                    .card__price
                                        span.card__current-price.body-xl-3.violet 123 400 ₽
                                        span.card__old-price.body-s-2 165 200 ₽
                                    .cart-blank__count-value
                                        button.cart-blank__count-button.disabled
                                            +useIcon('minus')
                                        span.value 0
                                        button.cart-blank__count-button
                                            +useIcon('plus')
                                        input.input-count(type='hidden', name='count', value='0')
                            li.cart-blank__main-item
                                .c-flex.c-flex-column.gap-4
                                    span Взрослый
                                    span.text-gray.text-14 16+ (РФ и РБ)
                                .cart-blank__count
                                    .card__price
                                        span.card__current-price.body-xl-3.violet 1 400 ₽
                                    .cart-blank__count-value
                                        button.cart-blank__count-button
                                            +useIcon('minus')
                                        span.value 2
                                        button.cart-blank__count-button
                                            +useIcon('plus')
                                        input.input-count(type='hidden', name='count', value='2')
